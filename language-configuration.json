{
  "comments": {
    "lineComment": "{{--",
    "blockComment": ["{{--", "--}}"]
  },
  "brackets": [
    ["{{", "}}"],
    ["{!", "!}"],
    ["@", "@"],
    ["{%", "%}"],
    ["[", "]"],
    ["(", ")"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    ["{{", "}}"],
    ["{!", "!}"],
    ["[", "]"],
    ["(", ")"],
    ["{", "}"],
    ["'", "'"],
    ["\"", "\""],
    ["`", "`"]
  ],
  "surroundingPairs": [
    ["{{", "}}"],
    ["{!", "!}"],
    ["[", "]"],
    ["(", ")"],
    ["{", "}"],
    ["'", "'"],
    ["\"", "\""],
    ["`", "`"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*{{--\\s*region\\s*--}}",
      "end": "^\\s*{{--\\s*endregion\\s*--}}"
    }
  }
}
